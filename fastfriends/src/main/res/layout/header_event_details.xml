<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.fastfriends.android.fragment.EventDetailsHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/light_grey"
        android:scaleType="centerCrop"
        />

    <View
        android:id="@+id/scrim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/title"
        android:layout_alignBottom="@id/image"
        android:background="@drawable/scrim_bottom_dark"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Text.White.Large"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/subtitle"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:shadowColor="@color/black"
        android:shadowRadius="2"
        android:shadowDy="1"
        />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Text.White"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@id/image"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginBottom="16dp"
        android:shadowColor="@color/black"
        android:shadowRadius="2"
        android:shadowDy="1"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:textAppearance="@style/Text.Bold"
        android:drawableLeft="@drawable/ic_action_go_to_today"
        android:drawablePadding="4dp"
        android:background="@drawable/selector_transparent"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        />

    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:textAppearance="@style/Text.Bold"
        android:drawableLeft="@drawable/ic_action_directions"
        android:drawablePadding="4dp"
        android:background="@drawable/selector_transparent"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        />

    <RelativeLayout
        android:id="@+id/description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/location"
        >

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textAppearance="@style/Text"
            android:maxLines="@integer/collapsed_description_lines"
            android:ellipsize="end"
            android:paddingLeft="16dp"
            android:paddingRight="32dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/selector_transparent"
            />

        <WebView
            android:id="@+id/webview"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/description"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:background="@android:color/transparent"
            android:layerType="software"
            />

        <ImageView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_expand"
            android:adjustViewBounds="true"
            android:layout_gravity="right"
            android:gravity="right"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:paddingRight="16dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/tag_padding"
        android:layout_below="@id/description_layout"
        android:textAppearance="@style/Text"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        />

    <include
        android:id="@+id/members_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/list_event_member_status_header"
        android:layout_below="@+id/tags"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>
</RelativeLayout>
