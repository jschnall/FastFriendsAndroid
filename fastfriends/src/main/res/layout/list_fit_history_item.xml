<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/list_history_plan_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/list_padding_horizontal"
    android:paddingRight="@dimen/list_padding_horizontal"
    android:paddingTop="@dimen/list_padding_vertical"
    android:paddingBottom="@dimen/list_padding_vertical"
    >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Text.Large"
        android:layout_toRightOf="@id/icon"
        android:layout_toLeftOf="@+id/time"
        android:layout_alignParentTop="true"
        android:paddingLeft="16dp"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Text.Large"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="16dp"
        />

    <TextView
        android:id="@+id/field1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Text"
        android:layout_toRightOf="@+id/icon"
        android:layout_below="@id/name"
        android:visibility="gone"
        android:paddingLeft="16dp"
        />

    <TextView
        android:id="@+id/value1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Text"
        android:layout_toRightOf="@+id/field1"
        android:layout_below="@id/name"
        android:visibility="gone"
        android:paddingLeft="16dp"
        />

    <TextView
        android:id="@+id/field2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Text"
        android:layout_toRightOf="@+id/icon"
        android:layout_below="@id/field1"
        android:visibility="gone"
        android:paddingLeft="16dp"
        />

    <TextView
        android:id="@+id/value2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Text"
        android:layout_toRightOf="@+id/field2"
        android:layout_below="@id/value1"
        android:visibility="gone"
        android:paddingLeft="16dp"
        />

</RelativeLayout>