<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow -->
    <item>
        <shape>
            <padding android:top="0dp" android:right="2dp" android:bottom="2dp" android:left="0dp" />
            <gradient android:type="linear" android:startColor="#00333333" android:endColor="#40333333" android:angle="315"/>
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/medium_grey"/>

            <stroke
                android:width="1dp"
                android:color="@color/dark_grey" />

            <corners android:radius="2dp" />

            <padding
                android:left="@dimen/tag_padding"
                android:top="@dimen/tag_padding"
                android:right="@dimen/tag_padding"
                android:bottom="@dimen/tag_padding" />
        </shape>
    </item>
</layer-list>